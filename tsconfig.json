{
    "compilerOptions": {
        "target": "ES2015",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "lib": ["DOM", "ES2015", "ES2016", "ES2017"],
        "moduleResolution": "node"
    },
    "include": [
        "assets/**/*.ts",
        "assets/**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}
